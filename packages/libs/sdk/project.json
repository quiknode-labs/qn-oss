{
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/libs/sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -rf ./dist/packages/libs/sdk",
          "./node_modules/rollup/dist/bin/rollup --config packages/libs/sdk/rollup.config.js",
          "yarn tsc --project packages/libs/sdk/tsconfig.lib.json --declarationDir dist --emitDeclarationOnly"
        ],
        "outputPath": "dist/packages/libs/sdk"
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs libs-sdk {args.ver} {args.otp} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/libs/sdk/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/libs/sdk"],
      "options": {
        "jestConfig": "packages/libs/sdk/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
