{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2016",
    "module": "ES6",
    "declaration": true // using dts-bundle-generator CLI for declaration files
  },
  "include": ["**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "spec",
    "**/*.spec.ts",
    "**/*.test.ts",
    "webpack.config.ts",
    "src/spec/testSetup/**.*",
    "node_modules",
    "codegen.ts"
  ]
}
